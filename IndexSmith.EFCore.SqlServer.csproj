<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <RootNamespace>IndexSmith.EFCore.SqlServer</RootNamespace>
    <PackageId>IndexSmith.EFCore.SqlServer</PackageId>
    <Version>1.0.0</Version>
    <Authors>IndexSmith Contributors</Authors>
    <Description>Opinionated, heuristic-driven indexing for EF Core (SQL Server)</Description>
    <PackageTags>efcore;entityframework;sqlserver;index;heuristics</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/BradenJT/IndexSmith.EFCore.SqlServer</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.*" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
